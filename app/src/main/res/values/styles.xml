<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LoginTextStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">textEnd</item>
    </style>

    <style name="LoginTitle">
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/title_layout_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>
